# Environment variables for Media Processor
# Copy this file to .env and update with your actual values

# Source directory - where JDownloader saves files
SOURCE_DIR="/path/to/your/downloads/"

# Logging configuration
LOG_FILE="/path/to/media-processor.log"
LOG_LEVEL="info"

# SMB Connection Settings
SMB_SERVER="your-nas-server.local"
SMB_SHARE="your-share-name"
SMB_USERNAME="your-username"
SMB_PASSWORD="your-password"
SMB_DOMAIN=""
SMB_AUTH_METHOD="user"

# Processing options
DRY_RUN=false
OVERWRITE_EXISTING=false
VERBOSE_OUTPUT=false

# Media paths - relative to SMB share root
MALAYALAM_MOVIE_PATH="media/malayalam movies"
MALAYALAM_TV_PATH="media/malayalam-tv-shows"
ENGLISH_MOVIE_PATH="media/movies"
ENGLISH_TV_PATH="media/tv-shows"
DEFAULT_MEDIA_PATH="media"

# Language extraction settings
EXTRACT_AUDIO_TRACKS=true
EXTRACT_SUBTITLES=true
PREFERRED_LANGUAGE="mal"
PREFERRED_AUDIO_LANGS="mal,eng"
PREFERRED_SUBTITLE_LANGS="eng"

# TMDB API configuration for intelligent movie title lookup
# Get a free API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY="your-tmdb-api-key-here"
TMDB_INCLUDE_YEAR=true
TMDB_INCLUDE_ID=false
TMDB_FALLBACK_ENABLED=true

# Cleanup configuration
CLEANUP_RAR_FILES=true
CLEANUP_EMPTY_DIRS=true
CLEAN_ORIGINAL_FILES=true
MIN_RAR_AGE_HOURS=0

# Advanced settings
TEMP_DIR="/tmp/media-processor"
MAX_CONCURRENT_TRANSFERS=2
RETRY_COUNT=3
RETRY_DELAY=5

# Server Settings
PORT=3005
MAX_CONCURRENT_OPERATIONS=3
THUMBNAIL_QUALITY=80

# Dashboard API configuration
DASHBOARD_API_ENABLED=true
DASHBOARD_API_URL="http://localhost:3001"
DASHBOARD_API_TIMEOUT=5

# Python API configuration
PYTHON_API_PORT=5001
PYTHON_API_URL="http://localhost:5001"

# File paths for Python system
PYTHON_LOG_FILE="/var/lib/media-processor/media_processor_py.log"
FILE_HISTORY_PATH="/var/lib/media-processor/file_history.json"
MONITORING_INTERVAL_SECONDS=60

# Media file extensions
MEDIA_EXTENSIONS=".mkv,.mp4,.avi"